<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
  　<%= f.text_field :name, placeholder: "名前", class: "form-control input-search-word" %>
  </div>
  <div class="form-group">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <%= f.text_field :age, placeholder: "年齢(数字のみ入力してください）", class: "form-control input-search-word" %>
  </div>
  
  <div class="form-group">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <%= f.text_area :body, placeholder: "内容", class: "form-control input-search-word" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-lg btn-primary" %>
  </div>
<% end %>