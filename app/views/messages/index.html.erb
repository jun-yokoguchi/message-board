<div class="panel panel-default">
  <div class="panel-heading">
      メッセージ一覧
  </div>
   
  <div class="panel-body">

<% @messages.each do |message| %>
  <span class="label label-info">
<%= message.name %>
  </span>
　
<%= message.body %>
<%= form_for(@message, html: {class: "form-forizontal"}) do |f| %>
  <div class="form-group">
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
    <%= f.text_field :name, placeholder: "ニックネーム", class: "form-control input-search-word" %>
  </div>
  <div class="form-group">
    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    <%= f.text_area :body, placeholder: "メッセージ", class: "form-control input-search-word" %>
  </div>
  <div class="form-group">
    <%= f.submit class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
  (
<%= link_to "edit" , edit_message_path(message) %>
<%= link_to "destroy" , message ,method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
  )
　<br>
<% end %>
  </div>
</div>

<% #部分テンプレートを読み込んでいる %>

<%= render 'form' %>