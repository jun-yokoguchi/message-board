<div class="panel panel-success">
   <div class="panel-heading">
      メッセージ一覧
   </div>
<div class="panel-body">
<% @messages.each do |message| %>
　<span class="label label-info"><%= message.name %></span>
　<%= message.body %>
　<br>
<% end %>
</div>
</div>

<%= form_for(@message) do |f| %>
   <span class="glyphicon glyphicon-user" aria-hidden="true"></span><br>
   <%= f.text_field :name, placeholder: "ニックネーム" %>
   <br><br>
   	
   <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    	
   <%= f.text_area :body, placeholder: "メッセージ", class: "form-control input-search-word" %>
   <br><br>
   <%= f.submit class: "btn btn-lg btn-primary" %>
  <% end %>